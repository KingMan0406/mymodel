<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp">
    <androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="26dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/red_hoody" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="model_id"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/name_product_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Red hoddy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_marginRight="10dp"
                        android:text="60"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/icon_dollars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="2dp"
                    android:text="ncbehbhebce"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ability_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="is available of /out store"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_zoom"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="18dp"
                    android:background="#D6EDF8"
                    android:contentDescription="more"
                    android:src="@drawable/baseline_keyboard_arrow_down_24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Осталось"
                    android:textColor="@color/white"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:text="-" />

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    <ImageView
        android:id="@+id/tovar_favorite_check"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cheg"
        android:visibility="invisible"
        android:layout_gravity="center"/>
</androidx.cardview.widget.CardView>

</LinearLayout>