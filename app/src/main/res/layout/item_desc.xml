<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDE9E9"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
          >
            <ImageView
                android:id="@+id/image_card"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/red_hoody" />
            <TextView
                android:id="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#EDEDE9"
                android:text="Sweeter LOLY"
                android:textSize="26sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:id="@+id/price_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="50"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/icon_dollars"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="$"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/desc_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="2dp"
                    android:text="Диван раскладной,пр-во Германии, размеры длина:
               mlmlmlmlmlmlmlmlmmlmlmnlmlnlmlnmlmlmlmlmlmlmlmlmlmlmlmlmlmllmlmlmlmllmlmlmllmlmllmlmlmll"
                    android:textSize="20sp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>